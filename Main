import  java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        System.out.println("Введите кол-во имеющихся денег: ");
        int money = scan.nextInt();
        System.out.println("Введите цену 1 шоколадки: ");
        int price = scan.nextInt();
        System.out.println("Введите кол-во обёрток для обмена на ещё одну шоколадку: ");
        int wrap = scan.nextInt();
        int res = Chocolate.CountChocolate(money,price,wrap);
        System.out.print("Ответ: " + res);
    }
}
